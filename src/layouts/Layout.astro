---
import "../styles/style.scss";
const { title = "Furniture Design" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body>
    <slot />

    <!-- ðŸ‘‡ body ã®ä¸€ç•ªæœ€å¾Œ -->
    <script>
      const body = document.body;
      const toggle = document.querySelector(".l-header__toggle");
      const overlay = document.querySelector(".l-header__overlay");

      if (toggle && overlay) {
        const close = () => {
          body.classList.remove("is-menu-open");
          toggle.setAttribute("aria-expanded", "false");
        };

        toggle.addEventListener("click", () => {
          body.classList.toggle("is-menu-open");
          toggle.setAttribute(
            "aria-expanded",
            body.classList.contains("is-menu-open") ? "true" : "false"
          );
        });

        overlay.addEventListener("click", close);

        document.addEventListener("keydown", (e) => {
          if (e.key === "Escape") close();
        });
      }
    </script>

  </body>
</html>